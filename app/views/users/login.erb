<div class="row">
  <h2 class="col-sm-4">Welcome Back!</h2>
</div>

<form action="/users/login" method="POST">
  <div class="row">
    <label class="col-sm-2" for="username">Username: </label>
    <input class="col-sm-3" type="text" name="username" id="username" required>
  </div>
  <div class="row">
    <label class="col-sm-2" for="password">Password: </label>
    <input class="col-sm-3" type="password" name="password" id="password" required>
  </div>
  <div class="row">
    <input class="form-button col-sm-1 col-sm-offset-2" type="submit" name="submit" value="Log In">
    <div class="button col-sm-2"><a href="/users/signup">New User?</a></div>
  </div>
</form>
