<div class="row">
  <h2 class="col-sm-6">Welcome to MOOC Maestro!</h2>
</div>

<form action="/users" method="POST">
  <div class="row">
    <label class="col-sm-2" for="username">*Username: </label>
    <input class="col-sm-3" type="text" name="user[username]" id="username" required>
  </div>
  <div class="row">
    <label class="col-sm-2" for="email">*Email: </label>
    <input class="col-sm-3" type="text" name="user[email]" id="email" required>
  </div>
  <div class="row">
    <label class="col-sm-2" for="password">*Password: </label>
    <input class="col-sm-3" type="password" name="user[password]" id="password" required>
  </div>
  <div class="row">
    <input class="form-button col-sm-1 col-sm-offset-2" type="submit" name="submit" value="Sign Up">
    <div class="button col-sm-2"><a href="/users/login">Returning User?</a></div>
  </div>
</form>
