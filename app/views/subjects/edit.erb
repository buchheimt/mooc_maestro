<h1>Edit <%= @subject.name %></h1>

<form action="/subjects/<%= @subject.slug %>" method="POST">
  <input type="hidden" name="_method" value="PATCH" id="hidden">
  <label for="name">Name: </label>
  <input type="text" name="subject[name]" id="name" value="<%= @subject.name %>"><br>
  <label for="description">Description: </label>
  <input type="text" name="subject[description]" id="description" value="<%= @subject.description %>">
  <span>(optional)</span><br>

  <h4>Courses: </h4>
  <% @courses.each do |course| %>
    <input type="checkbox" name="subject[course_ids][]" value="<%= course.id %>" id="<%= course.name %>" <%= 'checked' if @subject.courses.include?(course) %>>
      <%= course.name %>
    </input>
  <% end %><br><br>
  <input class="form-button" type="submit" name="submit" value="Edit Subject">
</form>
