<div class="row">
  <div class="col-sm-12">
    <h2>Add a New Subject</h2>
  </div>
</div>

<form action="/subjects" method="POST">

  <div class="row">
    <div class="col-sm-2">
      <label for="name">*Name:</label>
    </div>
    <div class="col-sm-4">
      <input type="text" name="subject[name]" id="name" required>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-2">
      <label for="description">Description:</label>
    </div>
    <div class="col-sm-4">
      <input type="text" name="subject[description]" id="description">
    </div>
  </div>

  <div class="row">
    <div class="col-sm-3">
      <h4>Courses:</h4>
    </div>
  </div>
  <div class="row">
    <% @courses.each do |course| %>
      <div class="col-sm-4">
        <input type="checkbox" name="subject[course_ids][]" value="<%= course.id %>" id="<%= course.name %>">
        <label for="<%= course.name %>"><%= course.name %></label>
      </div>
    <% end %>
  </div><br><br>

  <div class="row">
    <div class="col-sm-2 col-sm-offset-5">
      <input class="form-button" type="submit" name="submit" value="Create Subject">
    </div>
  </div>
</form>
