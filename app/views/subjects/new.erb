<h1>Add A New Subject</h1>

<form action="/subjects" method="POST">
  <label for="name">Name: </label>
  <input type="text" name="subject[name]" id="name"><br>
  <label for="description">Description: </label>
  <input type="text" name="subject[description]" id="description">
  <span>(optional)</span><br>

  <h3>Courses: </h3>
  <% @courses.each do |course| %>
  <input type="checkbox" name="subject[course_ids][]" value="<%= course.id %>" id="<%= course.name %>">
    <%= course.name %>
  </input>
  <% end %><br><br>

  <input type="submit" name="submit" value="Create Subject">
</form>
