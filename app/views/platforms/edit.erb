<div class="row">
  <h2 class="col-sm-12">Edit <%= @platform.name %></h2>
</div>

<form action="/platforms/<%= @platform.slug %>" method="POST">
  <input type="hidden" name="_method" value="PATCH" id="hidden">
  <div class="row">
    <label class="col-sm-2" for="name">*Name: </label>
    <input class="col-sm-4" type="text" name="platform[name]" id="name" value="<%= @platform.name %>">
  </div>

  <div class="row">
    <label class="col-sm-2" for="description">Description: </label>
    <input class="col-sm-4" type="text" name="platform[description]" id="description" value="<%= @platform.description %>">
  </div>

  <div class="row">
    <div class="col-sm-3">
      <h4>Programs: </h4>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <% @programs.each do |program| %>
        <input type="checkbox" name="platform[program_ids][]" value="<%= program.id %>" id="<%= program.name %>" <%= 'checked' if @platform.programs.include?(program) %>>
          <%= program.name %>
        </input>
      <% end %><br><br>
    </div>
  </div>
  <div class="row">
    <input class="form-button col-sm-2 col-sm-offset-5" type="submit" name="submit" value="Edit Platform">
  </div>
</form>
