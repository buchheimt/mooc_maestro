<div class="row">
  <div class="col-sm-12">
    <h2>Add a New Platform</h2>
  </div>
</div>

<form action="/platforms" method="POST">

  <div class="row">
    <div class="col-sm-2">
      <label for="name">*Name:</label>
    </div>
    <div class="col-sm-4">
      <input type="text" name="platform[name]" id="name" required>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-2">
      <label for="description">Description:</label>
    </div>
    <div class="col-sm-4">
      <input type="text" name="platform[description]" id="description">
    </div>
  </div>

  <div class="row">
    <div class="col-sm-3">
      <h4>Programs:</h4>
    </div>
  </div>
  <div class="row">
    <% @programs.each do |program| %>
      <div class="col-sm-4">
        <input type="checkbox" name="platform[program_ids][]" value="<%= program.id %>" id="<%= program.name %>">
        <label for="<%= program.name %>"><%= program.name %></label>
      </div>
    <% end %>
  </div><br><br>

  <div class="row">
    <div class="col-sm-2 col-sm-offset-5">
      <input class="form-button" type="submit" name="submit" value="Create Platform">
    </div>
  </div>
</form>
