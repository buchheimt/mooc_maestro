<div class="row">
  <h1 class="col-sm-8"><%= @program.name %></h1>

  <% if user_created?(@program)  %>
    <div class="create button col-sm-2"><a href="/programs/<%= @program.slug %>/edit">Edit Program</a></div>
  <% end %>

  <% if @program.courses.any? {|c| @user.courses.include?(c)} %>
    <div class="create button col-sm-2"><a href="/programs/<%= @program.slug %>/leave">Leave Joined</a></div>
  <% end %>
  <% unless @program.courses.all? {|c| @user.courses.include?(c)} %>
    <div class="create button col-sm-2"><a href="/programs/<%= @program.slug %>/join">Join Available</a></div>
  <% end %>
</div>

<% if @program.description %>
  <div class="row">
    <p class="col-sm-2"><strong>Description:</strong></p>
    <p class="col-sm-10"><%= @program.description %></p>
  </div>
<% end %>

<% if program_length = @program.length %>
  <div class="row">
    <p class="col-sm-2"><strong>Program Length: </strong></p>
    <p class="col-sm-10"><%= program_length %></p>
  </div>
<% end %>

<p><strong>Courses: </strong></p>
<ul>
  <% @program.courses.each do |course| %>
    <div class="row">
      <li class="col-sm-offset-2 col-sm-10"><a href="/courses/<%= course.slug %>"><%= course.name %></a></li>
    </div>
  <% end %>
</ul>

<div class="row">
  <p class="col-sm-2"><strong>Subjects: </strong></p>
  <div class="col-sm-10">
    <% @program.subjects.uniq.each do |subject| %>
      <span><a href="/subjects/<%= subject.slug %>"><%= subject.name %></a></span>
      <span><%= "| " unless subject == @program.subjects.last %></span>
    <% end %>
  </div>
</div>

<% if @user.programs.include?(@program) %>
  <h2>My Info</h2>
  <div class="row">
    <p class="col-sm-2"><strong>Start Date:</strong> </p>
    <p class="col-sm-10">???</p>
  </div>
  <% if false %>
    <div class="row">
      <p class="col-sm-2"><strong>End Date:</strong> </p>
      <p class="col-sm-10">???</p>
    </div>
  <% end %>
  <% unless false %>
    <div class="row">
      <p class="col-sm-2"><strong>Progress: </strong> </p>
      <p class="col-sm-10">???</p>
    </div>
  <% end %>
<% end %>
