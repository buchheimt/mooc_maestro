<div class="row">
  <h1 class="col-sm-8"><%= @course.name %></h1>

  <% if user_created?(@course)  %>
    <div class="create button col-sm-2"><a href="/courses/<%= @course.slug %>/edit">Edit Course</a></div>
  <% end %>

  <% if current_user.courses.include?(@course) %>
    <div class="create button col-sm-2"><a href="/courses/<%= @course.slug %>/leave">Leave Course</a></div>
  <% else %>
    <div class="create button col-sm-2"><a href="/courses/<%= @course.slug %>/join">Join Course</a></div>
  <% end %>
</div>


<% if @course.description %>
  <div class="row">
    <p class="col-sm-2"><strong>Description:</strong></p>
    <p class="col-sm-10"><%= @course.description %></p>
  </div>
<% end %>

<% if @course.length_in_hours %>
  <div class="row">
    <p class="col-sm-2"><strong>Course Length:</strong></p>
    <p class="col-sm-10"><%= @course.length_in_hours %> hours</p>
  </div>
<% end %>

<% if @course.program.name != "Individual Courses" %>
  <div class="row">
    <p class="col-sm-2"><strong>Program: </strong></p>
    <p class="col-sm-10"><a href="/programs/<%= @course.program.slug %>"><%= @course.program.name %></a></p>
  </div>
  <div class="row">
    <p class="col-sm-2"><strong>Platform: </strong></p>
    <p class="col-sm-10"><a href="/platforms/<%= @course.platform.slug %>"><%= @course.platform.name %></a></p>
  </div>
<% end %>

<div class="row">
  <p class="col-sm-2"><strong>Subjects: </strong></p>
  <div class="col-sm-10">
    <% @course.subjects.each do |subject| %>
      <span><a href="/subjects/<%= subject.slug %>"><%= subject.name %></a></span>
      <span><%= "| " unless subject == @course.subjects.last %></span>
    <% end %>
  </div>
</div>


<% if current_user.courses.include?(@course) %>
  <h2>My Info</h2>
  <div class="row">
    <p class="col-sm-2"><strong>Start Date:</strong> </p>
    <p class="col-sm-10"><%= @user_course.start_date.month %>-<%= @user_course.start_date.day %>-<%= @user_course.start_date.year %></p>
  </div>
  <% if @course.length_in_hours == @user_course.progress_in_hours %>
    <div class="row">
      <p class="col-sm-2"><strong>End Date:</strong> </p>
      <p class="col-sm-10"><%= @user_course.end_date.month %>-<%= @user_course.end_date.day %>-<%= @user_course.end_date.year %></p>
    </div>
  <% end %>
  <% unless @course.length_in_hours.nil? %>
    <div class="row">
      <p class="col-sm-2"><strong>Progress: </strong> </p>
      <p class="col-sm-10"><%= @user_course.progress_in_hours %> hours</p>
    </div>
  <% end %>
<% end %>
