<h1>Add a New Course</h1>

<form action="/courses" method="POST">
  <label for="name">Name: </label>
  <input type="text" name="course[name]" id="name"><br>
  <label for="description">Description: </label>
  <input type="text" name="course[description]" id="description">
  <span>(optional)</span><br>
  <label for="length_in_hours">Course Length (hours): </label>
  <input type="text" name="course[length_in_hours]" id="length_in_hours">
  <span>(optional)</span><br>
  <input type="submit" name="submit" value="Create Course">
</form>
